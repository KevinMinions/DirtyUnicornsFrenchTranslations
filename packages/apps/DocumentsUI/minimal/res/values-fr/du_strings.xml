<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Title of the Files application [CHAR LIMIT=32] -->
    <string name="files_label">Documents</string>

    <!-- Text in an alert dialog asking user to grant app access to a given directory in an external storage volume -->
    <string name="open_external_dialog_request">Accorder à <xliff:g id="appName" example="System Settings"><b>^1</b></xliff:g>
        l\'accès à <xliff:g id="directory" example="Pictures"><i>^2</i></xliff:g> sur
        <xliff:g id="storage" example="SD Card"><i>^3</i></xliff:g> ?</string>
    <!-- Text in an alert dialog asking user to grant app access to a given directory in the internal storage -->
    <string name="open_external_dialog_request_primary_volume">Accorder à <xliff:g id="appName" example="System Settings"><b>^1</b></xliff:g>
        l\'accès à <xliff:g id="directory" example="Pictures"><i>^2</i></xliff:g> ?</string>
    <!-- Text in an alert dialog asking user to grant app access to all data in an external storage volume -->
    <string name="open_external_dialog_root_request">Accorder à  <xliff:g id="appName" example="System Settings"><b>^1</b></xliff:g>
        l\'accès à vos données, y compris vos photos et des vidéos, sur <xliff:g id="storage" example="SD Card"><i>^2</i></xliff:g> ?</string>
    <!-- Checkbox that allows user to not be questioned about the directory access request again -->
    <string name="never_ask_again">Ne plus demander</string>
    <!-- Text in the button asking user to allow access to a given directory. -->
    <string name="allow">Accorder</string>
    <!-- Text in the button asking user to deny access to a given directory. -->
    <string name="deny">Refuser</string>

    <!-- Error message shown when an archive fails to load -->
    <string name="archive_loading_failed">Impossible d\'ouvrir l\'archive pour la navigation. Le fichier est soit corrompu, soit dans un format non pris en charge.</string>

</resources>
